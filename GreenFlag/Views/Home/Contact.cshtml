@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="/rotator/allinone_bannerRotator.css" rel="stylesheet" type="text/css">
<style>
    #cont1, #cont2 {
        color: #333333;
    }

    #cont1 {
        font-size: 52px;
        line-height: 60px;
    }

    #cont2 {
        font-size: 24px;
        line-height: 32px;
        width: 50%;
    }
</style>
<div id="rotator">
    <ul>
        <li data-bottom-thumb="/Content/images/contact.jpg" data-text-id="#contactText"><img src="/Content/images/contact2.jpg" alt="" /></li>
    </ul>

    <div id="contactText" class="allinone_contentslider_texts">
        <div id="cont1" class="rotator-text-line rotator-text-line-responsive" data-initial-left="830" data-initial-top="130" data-final-left="830" data-final-top="130" data-duration="0.5" data-fade-start="0" data-delay="0">Contact Us</div>
        <div id="cont2" class="rotator-text-line rotator-text-line-responsive" data-initial-left="500" data-initial-top="220" data-final-left="500" data-final-top="220" data-duration="0.5" data-fade-start="0" data-delay="0">We would love to hear from you. To speak with us about an existing or upcoming project, or for any other inquiry, please fill out and submit the form below.</div>
    </div>
</div>
<div style="margin-top:50px;">
    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-4 text-center"  >
            <img class="img-circle" data-src="holder.js/200x200" alt="200" src="/Content/Images/phoneIcon.jpg" style="width: 200px; height: 200px;">
